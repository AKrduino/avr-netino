pinDef( C, 4 , NOT_ON_TIMER,TDO,J3_6)
pinDef( C, 5 , NOT_ON_TIMER,TDI,J3_7)
pinDef( C, 6 , NOT_ON_TIMER,TOSC1,J3_8)
pinDef( C, 7 , NOT_ON_TIMER,TOSC2,J3_9)
/* 8 */
pinDef( A, 0 , NOT_ON_TIMER,ADC0,J3_10)
pinDef( A, 1 , NOT_ON_TIMER,ADC1,J3_11)
pinDef( A, 2 , NOT_ON_TIMER,ADC2,J3_12)
pinDef( A, 3 , NOT_ON_TIMER,ADC3,J3_13)
pinDef( A, 4 , NOT_ON_TIMER,ADC4,ADC_1)
pinDef( A, 5 , NOT_ON_TIMER,ADC5,ADC_2)
pinDef( A, 6 , NOT_ON_TIMER,ADC6,ADC_3)
pinDef( A, 7 , NOT_ON_TIMER,ADC7,ADC_4)
/* 16 */
pinDef( D, 0 , NOT_ON_TIMER,RXD,RS232_RxD)
pinDef( D, 1 , NOT_ON_TIMER,TXD,RS232_TxD)
pinDef( D, 2 , NOT_ON_TIMER,INT0,LED_1)
pinDef( D, 3 , NOT_ON_TIMER,INT1,RFM12_IRQ)
pinDef( D, 4 , TIMER1B,OC1B,LED_2)
pinDef( D, 5 , TIMER1A,OC1A,RFM12_CS)
#ifdef COM21
pinDef( D, 6 , NOT_ON_TIMER,ICP1,LED_3)
